<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.papak.myapplication.MainActivity">

    <ImageView
        android:contentDescription="@string/logo_content_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gadfly1"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        android:layout_margin="14dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_address_hint"
        android:layout_centerInParent="true"
        android:layout_below="@id/logo"
        android:imeOptions="actionDone"
        android:lines="1"

        android:id="@+id/addressfield" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressfield"
        android:layout_centerHorizontal="true"
        android:text="@string/submit_button"
        android:id="@+id/submitButton"
        android:onClick="clickAction"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submitButton"
        android:layout_centerHorizontal="true"
        android:text="@string/website_button"
        android:id="@+id/webButton"
        android:onClick="clickWeb"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/webButton"
        android:layout_centerHorizontal="true"
        android:text="CHECK ADAPTER"
        android:id="@+id/adaptButton"
        android:onClick="clickAdapt"/>
</RelativeLayout>
